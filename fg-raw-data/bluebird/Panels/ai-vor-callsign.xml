<?xml version="1.0"?>
<!--== Bluebird Explorer Hovercraft  version 10.9  ==-->

<PropertyList>
	<name>AI VOR Callsign text1</name>
	<background>Aircraft/Generic/Panels/Textures/transparent-bg.rgb</background>
	<w>768</w>
	<h>128</h>
	<instruments>
		<instrument>
			<name>Callsign Panel Airport</name>
			<condition>
				<and>
					<property>sim/model/bluebird/systems/power-switch</property>
					<equals>
						<property>sim/current-view/view-number</property>
						<value>0</value>
					</equals>
					<less-than>
						<property>sim/current-view/z-offset-m</property>
						<value>-5</value>
					</less-than>
					<or>
						<equals>
							<property>instrumentation/ai-vor/mode</property>
							<value>0</value>
						</equals>
						<equals>
							<property>instrumentation/ai-vor/mode</property>
							<value>3</value>
						</equals>
					</or>
				</and>
			</condition>
			<w-base>768</w-base>
			<h-base>128</h-base>
			<x>384</x>
			<y>64</y>
			<w>768</w>
			<h>128</h>
			<layers>
				<layer>
					<name>text line orange</name>
					<type>text</type>
					<font>arial_black</font>
					<point-size>96</point-size>
					<color>
						<red>0.87</red>
						<green>0.37</green>
						<blue>0.04</blue>
					</color>
					<chunks>
						<chunk>
							<type>text-value</type>
							<property>instrumentation/ai-vor/callsign</property>
						</chunk>
					</chunks>
					<transformations>
						<transformation>
							<type>x-shift</type>
							<offset>-300</offset>
						</transformation>
						<transformation>
							<type>y-shift</type>
							<offset>-34</offset>
						</transformation>
					</transformations>
				</layer>
			</layers>
		</instrument>
	</instruments>
</PropertyList>

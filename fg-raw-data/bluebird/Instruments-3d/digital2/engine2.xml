 <animation>
	<name>engine-lit-battery</name>
	<object-name>damage.pod.L</object-name>
	<object-name>damage.pod.R</object-name>
 </animation>

 <animation>
	<type>select</type>
	<object-name>engine-lit-power</object-name>
	<condition>
		<property>sim/model/bluebird/systems/power-switch</property>
	</condition>
 </animation>

<!-- damage bar moves 25 count per color -->
 <animation>
	<type>textranslate</type>
	<object-name>damage.bar</object-name>
	<property>sim/model/bluebird/damage/hits-counter</property>
	<factor>0.0025</factor>
	<step>1</step>
	<scroll>1</scroll>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
 </animation>

 <animation>
	<type>select</type>
	<object-name>damage.pod.L</object-name>
	<condition>
		<and>
			<not>
				<property>sim/model/bluebird/components/nacelle-L</property>
			</not>
			<or>
				<not>
					<property>controls/lighting/alert</property>
				</not>
				<and>
					<property>sim/model/bluebird/lighting/alert1/state</property>
					<property>controls/lighting/alert</property>
				</and>
			</or>
		</and>
	</condition>
 </animation>

 <animation>
	<type>select</type>
	<object-name>damage.pod.R</object-name>
	<condition>
		<and>
			<not>
				<property>sim/model/bluebird/components/nacelle-R</property>
			</not>
			<or>
				<not>
					<property>controls/lighting/alert</property>
				</not>
				<and>
					<property>sim/model/bluebird/lighting/alert1/state</property>
					<property>controls/lighting/alert</property>
				</and>
			</or>
		</and>
	</condition>
 </animation>


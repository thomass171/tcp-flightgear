<?xml version="1.0"?>
<!--== created for Bluebird Explorer Hovercraft  version 10.4 ==-->

<PropertyList>
	<path>ai-vor.ac</path>

	<animation>
		<type>material</type>
		<object-name>Ring</object-name>
		<object-name>Face</object-name>
		<object-name>GlidescopeNeedle</object-name>
		<object-name>LocalizerNeedle</object-name>
		<object-name>ElevationNeedle</object-name>
		<object-name>Knob</object-name>
		<emission>
			<red>1</red>
			<green>0.5</green>
			<blue>0.25</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
		<specular>
			<factor-prop>sim/model/bluebird/lighting/interior-specular</factor-prop>
			<red>0.9</red>
			<green>0.9</green>
			<blue>0.9</blue>
		</specular>
	</animation>

	<animation>
		<type>material</type>
		<object-name>AI</object-name>
		<object-name>AP1</object-name>
		<object-name>AP2</object-name>
		<object-name>MP</object-name>
		<emission>
			<red>0.9</red>
			<green>0.9</green>
			<blue>0.9</blue>
			<factor-prop>sim/model/material/instruments/factor</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>AP1</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<equals>
					<property>instrumentation/ai-vor/mode</property>
					<value>0</value>
				</equals>
				<not>
					<and>
						<equals>
							<property>instrumentation/ai-vor/distance-m</property>
							<value>0.0</value>
						</equals>
						<equals>
							<property>instrumentation/tracking/ap1-heading-offset-deg</property>
							<value>0.0</value>
						</equals>
					</and>
				</not>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>AP2</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<equals>
					<property>instrumentation/ai-vor/mode</property>
					<value>3</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>AI</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<equals>
					<property>instrumentation/ai-vor/mode</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>MP</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<equals>
					<property>instrumentation/ai-vor/mode</property>
					<value>2</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<name>LocalizerNeedleTransform</name>
		<type>rotate</type>
		<object-name>LocalizerNeedle</object-name>
		<property>instrumentation/ai-vor/heading-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- 10 mile range -->
	<animation>
		<type>select</type>
		<object-name>GlidescopeNeedle</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<greater-than>
					<property>instrumentation/ai-vor/distance-m</property>
					<value>-16093.0</value>
				</greater-than>
				<less-than>
					<property>instrumentation/ai-vor/distance-m</property>
					<value>16093.0</value>
				</less-than>
			</and>
		</condition>
	</animation>

	<animation>
		<name>GlidescopeNeedleTransform</name>
		<type>rotate</type>
		<object-name>GlidescopeNeedle</object-name>
		<property>instrumentation/ai-vor/distance-m</property>
		<factor>-0.0019884</factor>
		<min-deg>-32</min-deg>
		<max-deg>32</max-deg>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<name>RingTransform</name>
		<type>rotate</type>
		<object-name>Ring</object-name>
		<property>orientation/heading-deg</property>
		<factor>1</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>ElevationNeedle</object-name>
		<condition>
			<and>
				<property>sim/model/bluebird/systems/power-switch</property>
				<greater-than>
					<property>instrumentation/ai-vor/elevation-deg</property>
					<value>-90.0</value>
				</greater-than>
				<less-than>
					<property>instrumentation/ai-vor/elevation-deg</property>
					<value>90.0</value>
				</less-than>
			</and>
		</condition>
	</animation>

	<animation>
		<name>ElevationNeedleTransform</name>
		<type>rotate</type>
		<object-name>ElevationNeedle</object-name>
		<property>instrumentation/ai-vor/elevation-deg</property>
		<min-deg>-32</min-deg>
		<max-deg>32</max-deg>
		<center>
			<x-m>0</x-m>
			<y-m>0.03</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<name>Alpha Order Group</name>
		<object-name>Face</object-name>
		<object-name>LocalizerNeedleTransform</object-name>
<!--		<object-name>GlidescopeNeedleTransform</object-name> interferes with select in 1.0 -->
		<object-name>RingTransform</object-name>
	</animation>
</PropertyList>
